{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$actions/*": [
				"src/actions/*"
			],
			"$components/*": [
				"src/components/*"
			],
			"$data/*": [
				"src/data/*"
			],
			"$stores/*": [
				"src/stores/*"
			],
			"$styles/*": [
				"src/styles/*"
			],
			"$svg/*": [
				"src/svg/*"
			],
			"$utils/*": [
				"src/utils/*"
			],
		}
	},
	"include": [
		"src/**/*.js",
		"src/**/*.svelte"
	],
	"exclude": [
		"tasks/*.js"
	]
}